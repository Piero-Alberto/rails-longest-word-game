<div class="col-mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
         <h1 class="text-center mb-4">New game</h1>
      <div class="d-flex justify-content-center gap-2 mb-4">
        <% @letters.each do |letter| %>
          <span class="badge bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.2rem;"><%= letter %></span>
        <% end %>
      </div>
      <form action="/score" method="post" data-turbo="false">
        <p>Whats the longest word you can find</p>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
         <input type="text" name="word">
           <input type="submit" value="Play">
      </form>
    </div>
 </div>
</div>
